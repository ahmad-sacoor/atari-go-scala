   <Label fx:id="statusLabel1" style="-fx-font-size: 14px;" text="" />
   <Label fx:id="statusLabel2" style="-fx-font-size: 14px;" text="" />


   <HBox spacing="10">
      <Button fx:id="restartButton" onAction="#onRestart" text="Restart Game" />
      <Button fx:id="undoButton" onAction="#onUndo" text="Undo" />
   </HBox>
</VBox>
